{
  "compilerOptions": {
    "target": "es5",
    "lib":[
      "es2015"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "./"
  ]
}